html
  font-family 'Source Sans Pro', Arial, sans-serif

*
	box-sizing border-box
	margin 0
	padding 0
	border 0
	outline 0
	vertical-align baseline

header
  z-index 1
  position fixed
  width 100%
  height 100px
  padding-left 250px
  top 0
  color $header-text-color

nav
  width 250px
  position fixed

main
  margin 100px 0 0 250px

footer
  position fixed
  bottom 4px

.page
	&__title
		background-color $header-background-color
		height 50px
		overflow hidden
		padding 7px 30px 0px 30px
	&__header
		background-color $header-background-color2
		height 50px
		overflow hidden
	&__breadcrumb
	  height 25px
		overflow hidden
