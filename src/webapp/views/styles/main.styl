html
  font-family 'Source Sans Pro', Arial, sans-serif

  color $color-main
  svg
    fill $color-main

*
	box-sizing border-box
	margin 0
	padding 0
	border 0
	outline 0
	vertical-align baseline

input
  font inherit
  color inherit

a
  &:link
    color inherit
    text-decoration none
  &:visited
    color inherit
    text-decoration none
  &:focus
    color inherit
    text-decoration none
  &:hover
    color inherit
    text-decoration none
  &:active
    color inherit
    text-decoration none
