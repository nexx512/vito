html
  font-family 'Source Sans Pro', Arial, sans-serif

  color $color-main

*
	box-sizing border-box
	margin 0
	padding 0
	border 0
	outline 0
	vertical-align baseline

a
  &:link
    color inherit
    text-decoration none
  &:visited
    color inherit
    text-decoration none
  &:focus
    color inherit
    text-decoration none
  &::hover
    color inherit
    text-decoration none
  &::active
    color inherit
    text-decoration none

body
  background-color $color-main

header
  background-color $color-background
  z-index 1
  position fixed
  width 100%
  height 100px
  top 0
  color $header-text-color

#sidebarNavigationTrigger
  &__selector
    display none

    @media $mq-up_to_l
      &:checked
        & + .sidebarNavigation
          left 0

.sidebarNavigation
  background-color $color-main
  width 250px
  position fixed
  z-index 999
  transition left 0.2s
  @media $mq-up_to_l
    left -250px
    height 100vh
  @media $mq-l_and_up
    height calc(100vh - 100px)

  &__trigger
    fill white
    @media $mq-l_and_up
      display none

main
  background-color $color-background
  min-height calc(100vh - 100px)
  margin-top 100px
  @media $mq-l_and_up
    margin-left 250px

footer
  position fixed
  bottom 4px

.page
  &__title
    background-color $color-header
    color $color-header-inverse
    padding-left 16px
    height 50px
    overflow hidden
    display flex
    align-items flex-end

    h1
      margin-bottom 4px

  &__header
    background-color $color-header2
    color $color-header2-inverse
    border-bottom 1px solid $color-separator
    height 50px
    overflow hidden
    display flex
    align-items center

  &__sidebarNavigationTrigger
    padding 8px
    @media $mq-l_and_up
      display none

  &__breadcrumb
    height 25px
    overflow hidden
    margin-bottom 8px
    padding-left 16px
