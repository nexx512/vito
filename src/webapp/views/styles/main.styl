html
  font-family 'Source Sans Pro', Arial, sans-serif

  color $color-main

*
	box-sizing border-box
	margin 0
	padding 0
	border 0
	outline 0
	vertical-align baseline

a
  &:link
    color inherit
    text-decoration none
  &:visited
    color inherit
    text-decoration none
  &:focus
    color inherit
    text-decoration none
  &::hover
    color inherit
    text-decoration none
  &::active
    color inherit
    text-decoration none

body
  background-color $color-main

header
  background-color $color-background
  z-index 1
  position fixed
  width 100%
  height 100px
  margin-left 250px
  top 0
  color $header-text-color

.sidebarNavigation
  width 250px
  position fixed

main
  margin 100px 0 0 250px
  background-color $color-background
  min-height calc(100vh - 100px)

footer
  position fixed
  bottom 4px

.page
	&__title
    background-color $color-header
    color $color-header-inverse
    padding-left 16px
    height 50px
    overflow hidden
    display flex
    align-items flex-end

    h1
      margin-bottom 4px

	&__header
    background-color $color-header2
    color $color-header2-inverse
    border-bottom 1px solid $color-separator
    padding-left 16px
    height 50px
    overflow hidden
    display flex
    align-items flex-end

	&__breadcrumb
    height 25px
    overflow hidden
    margin-bottom 8px
