$section-tab-height = 32px

.sections

  &__wrapper
    display flex
    position relative
    overflow hidden
    height 100%

  .section

    &__selector
      display none

      &:checked
        & + * + .section__content
          opacity 1
          visibility visible
        & + .section__label
          border-bottom 2px solid $color-secondary

    &__label
      display flex
      align-items center
      margin-left $space-normal
      margin-right $space-normal
      height $section-tab-height

    &__content
      border-top 2px solid $color-secondary
      background-color $color-background
      transition visibility 0.2s, opacity 0.2s
      opacity 0
      visibility hidden
      position absolute
      left 0
      top $section-tab-height
      height calc(100% - 32px)
      overflow-y auto
