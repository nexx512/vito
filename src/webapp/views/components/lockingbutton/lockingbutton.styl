.lockingButton

  &__switch
    display none

    &:checked ~ .lockingButton__content
      top 2px
      left 2px
      box-shadow 1px 1px 2px rgba(0, 0, 0, 0.5)

      //&:hover
      //  top 3px
      //  left 3px
      //  box-shadow none

  &__content
    padding 0
    position relative
    width 100%
    background-color transparent

  &__buttonIcon
    width 100%
    padding-bottom 100%
    display flex
    background-color white
    > *
      position absolute
