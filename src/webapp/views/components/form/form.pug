mixin form(method, action, withHiddenSubmitButton = false)
  - const formMethod = (method === "GET") ? "GET" : "POST" 
  form(action=action method=formMethod)&attributes(attributes)
    if (method !== formMethod)
      input(type="hidden" name="_method" value=method)
    block
    if withHiddenSubmitButton
      button(type="submit" style="display:none")
