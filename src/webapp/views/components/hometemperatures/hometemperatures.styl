.homeTemperatures
  width 100%
  padding-bottom 66.66%
  background svgImport("home.svg") bottom right no-repeat
  position relative
  font-weight bold

  &__element
    position absolute

  &__iconDayNight
    top 14%
    left 27%
    width 13%

  &__iconFreezing
    top 14%
    left 5%
    width 13%

  &__outsideTemperature
    font-size $font-size-medium
    bottom 13%
    right 60%
    width 36%

  &__roomTemperatures
    font-size $font-size-medium
    display flex
    align-items center
    width 41%
    right 13%
    .icon
      width 25%
      margin-right 10%

  &__roomTemperature
    bottom 35%

  &__reducedRoomTemperature
    bottom 12%
